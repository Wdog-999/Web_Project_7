@model MvcMovie.Models.MovieReviewViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container body-content">


    <h3>Movie Details</h3>

    <div class="row">
        <div class="col-md-5">
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(modelItem => Model.movie.Title)
                </dt>
                <dd>
                    @Html.DisplayFor(modelItem => Model.movie.Title)
                </dd>
                <dt>
                    @Html.DisplayNameFor(modelItem => Model.movie.ReleaseDate)
                </dt>
                <dd>
                    @Html.DisplayFor(modelItem => Model.movie.ReleaseDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(modelItem => Model.movie.Genre)
                </dt>
                <dd>
                    @Html.DisplayFor(modelItem => Model.movie.Genre)
                </dd>
                <dt>
                    @Html.DisplayNameFor(modelItem => Model.movie.Price)
                </dt>
                <dd>
                    @Html.DisplayFor(modelItem => Model.movie.Price)
                </dd>
                <dt>
                    @Html.DisplayNameFor(modelItem => Model.movie.Rating)
                </dt>
                <dd>
                    @Html.DisplayFor(modelItem => Model.movie.Rating)
                </dd>
            </dl>
        </div>
        <div class="col-md-3">
            <img src="@Html.DisplayFor(modelItem => Model.movie.Poster)" />
        </div>
    </div>
    </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.movie.ID" class="btn btn-info">Edit</a> |
            <a asp-action="Index" class="btn btn-info">Back to List</a>
        </div>
@if (Model.reviews.Any())
{
        <table class="table">
            <thead>
                <tr>
                    @*<th>
                        Reviewer
                    </th>*@
                    <th>
                        Comment
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.reviews)
                {
                    <tr>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Comment)
                            <br/>
                            - <i>@Html.DisplayFor(modelItem => item.Name)</i>
                        </td>
                        <td>
                            <a asp-controller="Reviews" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-info">Edit</a> |
                            <a asp-controller="Reviews" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-info">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
            </table>
}
else
{
    <br />
}

                    <div>
                        <form class="form-inline" asp-controller="Reviews" asp-action="Create" method="get">
                            <div class="form-group">
                                <input type="hidden" name="movietitle" class="form-control col-sm-6" value="@Model.movie.Title"/>
                                <input type="hidden" name="movieID" class="form-control col-sm-6" value="@Model.movie.ID"/>
                            </div>
                            <input type="submit" value="Write a Review" class="btn btn-lg btn-info" />
                        </form>
                    </div>
